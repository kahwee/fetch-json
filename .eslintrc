{
  "env": {
    "es6": true,
    "node": true,
    "jquery": true,
    "mocha": true,
    "browser": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "templateStrings": true,
    "superInFunctions": true,
    "classes": true,
    "defaultParams": true,
    "modules": true,
    "spread": true,
    "jsx": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralComputedProperties": true,
    "blockBindings": true
  },
  "globals": {
    "_": true,
    "d3": true,
    "Slick": true,
    "Teeburu": true,
    "expect": true
  },
  "rules": {
    "no-new-object": 1,
    "no-reserved-keys": 1,
    "no-array-constructor": 1,
    "quotes": [1, "single"],
    "max-len": [1, 120, 2],
    "no-underscore-dangle": true,
    "consistent-this": [1, "_this"],
    "no-inner-declarations": 0,
    "no-shadow-restricted-names": 1,
    "one-var": 0,
    "vars-on-top": 0,
    "eqeqeq": 1,
    "curly": [1, "multi-line"],
    "no-mixed-spaces-and-tabs": 1,
    "space-before-blocks": [1, "always"],
    "space-infix-ops": 1,
    "eol-last": 1,
    "comma-style": [1, "last"],
    "semi": [1, "always"],
    "radix": 1,
    "camelcase": 1,
    "new-cap": [1, {
      "capIsNewExceptions": ["Immutable", "Event"]
    }],
    "func-names": 0,
    "complexity": [1, 12],
    "max-depth": [1, 3],
    "max-nested-callbacks": [2, 4],
    "max-params": [1, 4],
    "max-statements": [1, 30]
  }
}
